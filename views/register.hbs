<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card">
      <div class="card-body">
        <h1 class="text-center mt-3">Register</h1>
        {{> message}}
        <form action="/user/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input id="name" class="form-control" type="text" name="name" placeholder="Enter Name" value="{{name}}">
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input id="email" class="form-control" type="email" name="email" placeholder="Enter Email" value="{{email}}">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" class="form-control" type="password" name="password" placeholder="Enter Password" value="{{password}}">
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input id="confirmPassword" class="form-control" type="password" name="confirmPassword" placeholder="Confirm Password" value="{{confirmPassword}}">
          </div>
          <button class="btn btn-primary btn-block" type="submit">Register</button>
        </form>
        <p class="lead mt-4">
          Have An Account? <a href="/user/login">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>