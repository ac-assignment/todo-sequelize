<form action="/todo/{{todo.id}}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="isDone" {{#if todo.isDone}}checked{{/if}}>
      </div>
    </div>
    <input class="form-control" type="text" value="{{todo.name}}" placeholder="name" name="name">
    <div class="input-group-append">
      <button type="submit" class="btn btn-success">Save</button>
    </div>
  </div>
</form>